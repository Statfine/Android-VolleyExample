<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <Button 
	        android:id="@+id/volley_get_string"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="获取字符串"
	        />
	    
	    
	    <Button 
	        android:id="@+id/volley_get_params"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="post 携带参数获取"
	        />
	    
	    <Button 
	        android:id="@+id/volley_get_url"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="Get 通过Url获取"
	        />
	    
	     <Button 
	        android:id="@+id/volley_get_img"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="set Img"
	        />
	     
	     <Button 
	        android:id="@+id/volley_get_img_bitmap"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="get Img Bitmap"
	        />
	    
	     <LinearLayout 
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_gravity="center_horizontal"
	         >
		    <ImageView 
		        android:id="@+id/img_volley"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_gravity="center_horizontal"
		        />
		    
		    <!-- Volley下图片控件 -->
		    <com.android.volley.toolbox.NetworkImageView   
		        android:id="@+id/network_image_view"  
		        android:layout_width="100dp"  
		        android:layout_height="100dp"  
		        android:layout_gravity="center_horizontal"  
		        /> 
		        
		    <ImageView 
		        android:id="@+id/img_volley_bitmap"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        android:layout_gravity="center_horizontal"
		        />
		    
		</LinearLayout>
    
    <TextView
        android:id="@+id/tv_result_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="获取内容"
        android:layout_marginTop="20dp" />

</LinearLayout>

